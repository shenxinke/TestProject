<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_item_stroke"
    >

    <ImageView
        android:id="@+id/item_iv_bg"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:src="@mipmap/img_default_bg"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id="@+id/item_iv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/zhuanyuan_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <CheckBox
        android:id="@+id/item_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_checkbox"
        android:button="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"/>

    <TextView
        android:id="@+id/item_txt_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="标题"
        android:textColor="@color/color_222222"
        android:textStyle="bold"
        android:textSize="16sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        app:layout_constraintTop_toBottomOf="@+id/item_iv_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"/>

    <TextView
        android:id="@+id/item_txt_rmb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textColor="@color/color_E7464D"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_title"
        android:layout_marginStart="@dimen/margin_10dp"/>

    <TextView
        android:id="@+id/item_txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/color_E7464D"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_title"
        app:layout_constraintLeft_toRightOf="@+id/item_txt_rmb"
        android:layout_marginStart="2dp"/>

    <TextView
        android:id="@+id/item_txt_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0人购买"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_title"
        app:layout_constraintLeft_toRightOf="@+id/item_txt_price"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/item_txt_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0人评价"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_title"
        app:layout_constraintLeft_toRightOf="@+id/item_txt_buy"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/item_txt_watch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0人浏览"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_title"
        app:layout_constraintLeft_toRightOf="@+id/item_txt_comment"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/item_txt_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="由北京市朝阳区旗舰店提供"
        android:textColor="@color/color_065D94"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_price"
        />

    <View
        android:id="@+id/item_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/color_dddddd"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/item_txt_shop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <com.yst.onecity.view.roundedimageview.RoundedImageView
        android:id="@+id/item_iv_pic1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/head_2"
        app:oval="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_txt_gushi"
        app:layout_constraintBottom_toBottomOf="@+id/item_txt_gushi"
        />

    <com.yst.onecity.view.roundedimageview.RoundedImageView
        android:id="@+id/item_iv_pic2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/head_2"
        app:oval="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="@+id/item_txt_gushi"
        app:layout_constraintBottom_toBottomOf="@+id/item_txt_gushi"
        app:layout_constraintLeft_toLeftOf="@+id/item_iv_pic1"
        />

    <com.yst.onecity.view.roundedimageview.RoundedImageView
        android:id="@+id/item_iv_pic3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:src="@mipmap/head_2"
        app:oval="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toTopOf="@+id/item_txt_gushi"
        app:layout_constraintBottom_toBottomOf="@+id/item_txt_gushi"
        app:layout_constraintLeft_toLeftOf="@+id/item_iv_pic2"
        />

    <TextView
        android:id="@+id/item_txt_gushi"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="0个产品故事..."
        android:textSize="13sp"
        android:textColor="@color/color_666666"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/item_line"
        app:layout_constraintLeft_toRightOf="@+id/item_iv_pic3"
        />

    <TextView
        android:id="@+id/item_txt_zan"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="0"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        android:layout_marginRight="13dp"
        android:drawableLeft="@mipmap/zan"
        android:drawablePadding="3dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_line"
        />

    <TextView
        android:id="@+id/item_txt_zhuanfa"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="0"
        android:textSize="12sp"
        android:textColor="@color/color_999999"
        android:layout_marginRight="13dp"
        android:drawableLeft="@mipmap/fenxiang"
        android:drawablePadding="3dp"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@+id/item_txt_zan"
        app:layout_constraintTop_toBottomOf="@+id/item_line"
        />

    <ImageView
        android:id="@+id/item_iv_addCart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/gouwuche_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_line"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        />

</android.support.constraint.ConstraintLayout>