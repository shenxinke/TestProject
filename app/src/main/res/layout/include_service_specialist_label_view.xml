<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/serverMemberLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_contact_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/textSize_14dp"
        android:text="@string/find_ta_and_comment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:orientation="horizontal">
        <com.yst.onecity.view.FlowLayout
            android:id="@+id/flow_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_20px"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:paddingTop="@dimen/margin_10px" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_now_contact"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_black_180dp_bg"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_16dp"
        android:text="立即找TA"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_introduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10dp"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@drawable/shape_gray_bg"
        android:textSize="@dimen/textSize_14dp"
        android:text="服务专员简介"/>
</LinearLayout>