<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_headView"
    android:orientation="vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="猎场"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_share" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x8"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginRight="@dimen/x14"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_dz"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:clickable="true"
            android:src="@mipmap/dianzan" />

        <TextView
            android:id="@+id/tv_dzNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:paddingLeft="@dimen/padding_5dp"
            android:text="0"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="25dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:src="@mipmap/ic_eye" />

        <TextView
            android:id="@+id/tv_lookNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:paddingLeft="@dimen/padding_5dp"
            android:text="0"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/color_video_details_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="相关评论"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_16"
        android:background="@color/color_F7F7F7"
        android:paddingTop="@dimen/x14"
        android:paddingLeft="@dimen/x14"
        android:paddingBottom="@dimen/x8"
        />

</LinearLayout>
