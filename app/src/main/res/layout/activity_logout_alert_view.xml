<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_logout_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/activity_logout_main_view"
        android:layout_width="@dimen/x300"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/alertdialog_logout_selector"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:gravity="bottom|center_horizontal"
            android:layout_margin="5dp"
            android:text="下线通知"
            android:textColor="#020201"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/activity_logout_message_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"
            android:background="@null"
            android:gravity="center"
            android:layout_margin="5dp"
            android:text="您的账号于另一台手机上登录。"
            android:textColor="#020201"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C5C3CE" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/activity_logout_cancel_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center"
                android:text="退出"
                android:textColor="#0173FF"
                android:textSize="18sp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#C5C3CE" />

            <TextView
                android:id="@+id/activity_logout_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center"
                android:text="重新登录"
                android:textColor="#0173FF"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>