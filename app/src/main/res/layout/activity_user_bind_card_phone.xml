<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_bind_card_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical">

    <include layout="@layout/activity_title_layout_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:text="@string/phone"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/edit_bind_card_phone"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:hint="@string/input_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/txt_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x15"
                android:background="@drawable/shape_gray_180dp_bg"
                android:gravity="center"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x15"
                android:paddingRight="@dimen/x15"
                android:paddingTop="@dimen/x10"
                android:text="@string/get_verification_code"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#F5F5F5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:text="@string/verification_code"
                android:textSize="@dimen/text_size_14" />

            <EditText
                android:id="@+id/edit_bind_card_code"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/input_code"
                android:inputType="phone"
                android:maxLength="6"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_bank_next"
        style="@style/headHunter_button_tv"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x50"
        android:background="@drawable/bank_list_bg"
        android:text="下一步"
        android:textColor="@color/black" />
    />

</LinearLayout>
