<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_5dp"
    android:id="@+id/card_goods"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_card">

        <ImageView
            android:layout_margin="@dimen/margin_5dp"
            android:id="@+id/iv_goods"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@mipmap/brand_default"
            android:scaleType="centerCrop"></ImageView>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/label" />

        <TextView
            android:id="@+id/tv_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_goods"
            android:layout_marginTop="@dimen/margin_5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp"
            android:text="赫莲娜是欧莱雅集团旗下的顶级奢侈的美容品牌哈哈哈哈"
            android:textColor="@color/black"
            android:textSize="@dimen/x15_size" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_intro"
            android:layout_marginTop="@dimen/margin_5dp"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp"
            android:text="￥1200"
            android:layout_marginBottom="10dp"
            android:textColor="@color/color_FFE7464D"
            android:textSize="@dimen/x15_size" />

        <TextView
            android:id="@+id/tv_purch_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_intro"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toRightOf="@id/tv_price"
            android:text="255人购买"
            android:layout_alignTop="@id/tv_price"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_comment_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_intro"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toRightOf="@id/tv_purch_num"
            android:text="255人评价"
            android:layout_alignTop="@id/tv_price"
            android:textSize="@dimen/text_size_11" />

        <TextView
            android:id="@+id/tv_look_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_intro"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_toRightOf="@id/tv_comment_num"
            android:text="255人浏览"
            android:layout_alignTop="@id/tv_price"
            android:textSize="@dimen/text_size_11" />

        <ImageView
            android:layout_margin="@dimen/margin_5dp"
            android:id="@+id/iv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="53dp"
            android:src="@mipmap/shoppingcar" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
