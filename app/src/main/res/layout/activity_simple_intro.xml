<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/clude"
        layout="@layout/main_title"></include>

    <LinearLayout
        android:id="@+id/ll_ed"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/clude"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/ed_simple_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:hint="请输入个人简介"
            android:maxLength="200"
            android:padding="@dimen/margin_15dp"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_have_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ll_ed"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_toLeftOf="@+id/tv_num"
        android:text="0" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ll_ed"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:text="/200" />
</RelativeLayout>