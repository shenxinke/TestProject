<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_button"
            android:layout_marginTop="@dimen/x10"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="149dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/add_cart_pop_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:text="价格"
                        android:textColor="@color/color_FF763F"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/add_cart_pop_kucun_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:text="库存"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/add_cart_pop_choosed_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="请选择规格" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_cart_close_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right|top"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:src="@mipmap/login_img_delete" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@color/line" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="19dp"
                        android:text=""
                        android:textSize="12sp" />

                    <com.yst.onecity.view.TagView
                        android:id="@+id/sizeflowlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="19dp"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tv_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="19dp"
                        android:text=""
                        android:textSize="12sp" />

                    <com.yst.onecity.view.TagView
                        android:id="@+id/colorflowlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp" />

                    <View
                        android:id="@+id/color_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="19dp"
                        android:background="@color/line" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="17dp"
                        android:text="商品规格"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <com.yst.onecity.view.TagView
                        android:id="@+id/guige_taglayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginTop="10dp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginTop="19dp"
                        android:background="@color/line_back_ground"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="购买数量"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical|right"
                            android:layout_weight="2"
                            android:gravity="right">

                            <ImageView
                                android:id="@+id/btn_reduce"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/cart_delete_img" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <EditText
                                android:id="@+id/edit_product_count"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/cart_productbg_img"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="8"
                                android:minWidth="50dp"
                                android:text="1"
                                android:textColor="@color/black"
                                android:enabled="false"
                                android:cursorVisible="false"
                                />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <ImageView
                                android:id="@+id/btn_increase"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/cart_add_img" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/addCart"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#FF7F00"
                android:gravity="center"
                android:text="加入购物车"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/nowBuy"
                android:layout_width="@dimen/x0"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@color/color_e5403c"
                android:gravity="center"
                android:text="立即购买"
                android:textColor="@color/white" />
        </LinearLayout>

    <ImageView
        android:id="@+id/add_cart_pop_iv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="14dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@mipmap/img_default_p" />
</RelativeLayout>