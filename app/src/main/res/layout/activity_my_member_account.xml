<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_my_account2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <LinearLayout
        android:id="@+id/ll_zyyj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_label_gray_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x84"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.02"
                android:drawableLeft="@mipmap/account_tyye"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:paddingTop="@dimen/x16"
                android:text="@string/tv_zyyj"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/tv_zy_money"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:paddingTop="@dimen/x16"
                android:text=""
                android:textColor="#fd833a"
                android:textSize="@dimen/text_size_17" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32"
            android:paddingLeft="@dimen/x25"
            android:background="@color/white"
            android:gravity="left|center_vertical"
            android:text="@string/desc_zyyj"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="@dimen/x10"
                android:background="@mipmap/login_img_loginbg"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pocket_money"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x96"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_label_gray_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.02"
            android:drawableLeft="@mipmap/account_zmjf"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:text="@string/tianyiyue"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/tv_lingqian"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingRight="15dp"
            android:text=""
            android:textColor="#fd833a"
            android:textSize="@dimen/text_size_17" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tiantianjiang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x128"
        android:orientation="vertical"
        android:background="@drawable/shape_label_gray_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:visibility="invisible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableLeft="@mipmap/account_zmjf"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="@string/zhuanmaijifen"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_17" />

            <TextView
                android:id="@+id/tv_tiantianjiang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:text="0.00"
                android:textColor="#fd833a"
                android:textSize="@dimen/text_size_17" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="@dimen/x25"
            android:text="@string/zhuanmaijifen_zhushi"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_size_12"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/white">

       <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_dddddd"/>
    </LinearLayout>

</LinearLayout>
