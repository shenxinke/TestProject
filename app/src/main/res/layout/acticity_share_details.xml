<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/main_title"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include"
        android:background="@color/white"
        android:padding="@dimen/padding_10dp">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_content"
            android:text="2019_09-09" />

        <TextView
            android:id="@+id/tv_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_content"
            android:text="200人看过" />

        <com.yst.onecity.view.roundedimageview.RoundedImageView

            android:id="@+id/iv_share"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_below="@id/tv_look"
            android:layout_marginTop="@dimen/margin_10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/brand_default"
            app:corner_radius="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_content"
            app:oval="false" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_share"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="hhhhhhh"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>