<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/txt_group_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单个店铺满88元包邮"
        android:textSize="11sp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_D81E06"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_FFEFED"
        />
    <RelativeLayout
        android:id="@+id/ll_store"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_45dp"
        >

        <ImageView
            android:id="@+id/store_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@mipmap/head_2"
            />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/store_icon"
            android:gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="店铺名称" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/right_gray"
            />
    </RelativeLayout>
</LinearLayout>