<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_f0f0f0"
    android:gravity="center"
    android:id="@+id/ll_item"
    android:paddingTop="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_goodslist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@mipmap/img_default_p" />

    <TextView
        android:id="@+id/tv_goodslist_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:lines="2"
        android:paddingLeft="@dimen/padding_5dp"
        android:paddingTop="@dimen/padding_5dp"
        android:text=""
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/rl_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goodslist_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:text=""
            android:textColor="@color/tv_price" />

        <TextView
            android:id="@+id/tv_goodslist_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_toRightOf="@+id/tv_goodslist_price"
            android:text=""
            android:textSize="12sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"></View>

        <ImageView
            android:id="@+id/iv_add_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/x6"
            android:src="@mipmap/gouwuche" />

    </LinearLayout>


</LinearLayout>
