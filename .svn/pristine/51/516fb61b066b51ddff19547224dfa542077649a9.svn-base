<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/main_title" />

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="真实姓名:"
            android:textColor="@color/color_2b2b2b"
            android:textSize="14sp" />

        <EditText
            android:layout_weight="4.7"
            android:id="@+id/et_real_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:background="@null"
            android:hint="请填写真实姓名"
            android:textColorHint="@color/color_8c8c8c"
            android:textColor="@color/color_2b2b2b"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:background="@color/color_e8e7e5" />

    <LinearLayout
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="身份证:"
            android:textColor="@color/color_2b2b2b"
            android:textSize="14sp" />

        <EditText
            android:layout_weight="4.7"
            android:id="@+id/et_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:hint="请填写身份证"
            android:background="@null"
            android:textColorHint="@color/color_8c8c8c"
            android:textColor="@color/color_2b2b2b"
            android:textSize="14sp" />
    </LinearLayout>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="提示：请认真填写身份信息，该信息将作为您提现的重要认证"
      android:textSize="11sp"
      android:layout_gravity="center"
      android:gravity="center"
      android:layout_marginTop="29dp"
      android:textColor="@color/color_f16565"/>
    <TextView
        android:id="@+id/tv_commit_auth"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_40dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_80dp"
        android:background="@mipmap/login_img_loginbg"
        android:gravity="center"
        android:text="提交信息"
        android:textSize="17sp"
        android:textColor="@color/black" />
</LinearLayout>
