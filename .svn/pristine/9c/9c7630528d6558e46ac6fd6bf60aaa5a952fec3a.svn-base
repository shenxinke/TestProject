<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/order_nate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <com.yst.tianyimember.view.ContainsEmojiEditText
            android:id="@+id/edt_user_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="留言 (50字以内)"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:minHeight="45dp"
            android:maxLength="50"
            android:textColor="@color/color_666666"
            android:textSize="14sp"
            android:textCursorDrawable="@drawable/shape_et_cursor"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_dddddd"
        />

    <RelativeLayout
        android:id="@+id/rel_foot_invoice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发票"
            android:textColor="@color/color_222222"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:id="@+id/ll_invoice_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="36dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_222222"
                />
            <TextView
                android:id="@+id/txt_foot_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_222222"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_222222"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:src="@mipmap/right_gray"
            android:textColor="@color/color_222222"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_dddddd"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价:  "
                    android:textColor="@color/color_222222"
                    />
                <TextView
                    android:id="@+id/txt_foot_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ ---"
                    android:textColor="@color/color_222222"
                    />
                <TextView
                    android:id="@+id/txt_null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="@color/color_222222"
                    />
                <ImageView
                    android:id="@+id/iv_foot_jifen"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/jifen2_black"
                    />
                <TextView
                    android:id="@+id/txt_foot_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/color_222222"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总重:  "
                    android:textColor="@color/color_222222"
                    />
                <TextView
                    android:id="@+id/txt_foot_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--- kg"
                    android:textColor="@color/color_222222"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运费:  "
                    android:textColor="@color/color_222222"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/color_222222"
                    />
                <TextView
                    android:id="@+id/txt_foot_postage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/color_222222"
                    />
                <TextView
                    android:id="@+id/txt_huo_postage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" / "
                    android:textColor="@color/color_222222"
                    />
                <ImageView
                    android:id="@+id/iv_huo_postage"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/jifen2_black"
                    />
                <TextView
                    android:id="@+id/txt_foot_scorepostage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/color_222222"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_f4f4f4"
        />
</LinearLayout>