<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.yst.onecity.view.roundedimageview.RoundedImageView
                android:id="@+id/product_icon"
                android:layout_width="@dimen/layout_height_80dp"
                android:layout_height="@dimen/layout_height_80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:src="@mipmap/img_default_p"
                app:oval="false"
                />
            <TextView
                android:id="@+id/product_name"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:text="IPOE 气垫CC霜阿大声道撒多大所大所多撒大所大萨达大大所"
                android:textColor="@color/color_262626"
                android:lines="2"
                android:ellipsize="end"
                android:layout_alignTop="@id/product_icon"
                android:layout_toRightOf="@id/product_icon"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignTop="@id/product_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/iv_child_jifen"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/jifen2_black"
                    android:layout_marginRight="2dp"
                    />
                <TextView
                    android:id="@+id/txt_child_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.04"
                    android:textSize="12sp"
                    android:textColor="@color/color_262626"
                    android:layout_marginRight="5dp"
                    />
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥499"
                    android:textSize="12sp"
                    android:textColor="@color/color_262626"
                    android:layout_alignTop="@id/product_icon"
                    android:layout_alignParentRight="true"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/product_specification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品规格：BO-01／个  100g"
                android:textSize="11sp"
                android:textColor="@color/color_8C8C8C"
                android:layout_toRightOf="@id/product_icon"
                android:layout_below="@id/product_name"
                android:layout_marginTop="7dp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@id/product_icon"
                android:layout_marginRight="13dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textColor="@color/color_bb000000"
                    />
                <TextView
                    android:id="@+id/txt_buynum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_bb000000"
                    android:textSize="12sp"
                    android:layout_marginLeft="1dp"
                    />

            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_dddddd"
            />
        <LinearLayout
            android:id="@+id/ll_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <include layout="@layout/leave_a_note" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_range"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color_444444"
        android:alpha="0.6"
        android:text="超出配送范围"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp"
        android:visibility="gone"
        />
</RelativeLayout>