<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/main_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_45dp"
        android:text="普济一城"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:textSize="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/layout_height_45dp"/>


    <ImageView
        android:id="@+id/pic"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="@string/share"
        android:paddingTop="@dimen/margin_5dp"
        android:paddingBottom="@dimen/margin_5dp"
        android:textColor="@color/color_1b1b1b"
        android:layout_gravity="center"
        android:background="@drawable/shape_label_gray_bg"
        android:gravity="center"
        android:textSize="16dp"/>

</LinearLayout>