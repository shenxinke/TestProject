<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_1b1b1b">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/x40"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/bg_room_change"
        app:layout_constraintBottom_toTopOf="@+id/tv_lookDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        app:layout_constraintTop_toTopOf="@+id/tv_empty_addVideo"
        android:background="@drawable/video_px_empty_sy"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="160dp"
        android:layout_height="180dp"
        android:id="@+id/iv_empty_sy"
        />

    <TextView
        android:id="@+id/tv_empty_addVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x72"
        android:drawablePadding="@dimen/x4"
        android:drawableTop="@drawable/px_video_add"
        android:text="添加视频"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_empty" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#33000000"
        app:layout_constraintBottom_toTopOf="@+id/tv_lookDetail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="@dimen/x72"
        android:background="@color/color_090909"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x20"
        android:text="商品名称"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_lookDetail" />

    <TextView
        android:id="@+id/tv_lookDetail"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x72"
        android:background="@color/color_090909"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/x16"
        android:text="查看详情 >"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</android.support.constraint.ConstraintLayout>