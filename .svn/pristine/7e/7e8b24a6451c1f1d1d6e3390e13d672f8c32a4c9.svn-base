<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/main_title"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="48dp"
        android:background="#dddddd"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_width_120dp"
        android:layout_gravity="center"
        android:layout_marginTop="48.5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_qq"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_10dp"
            android:drawableTop="@mipmap/share_qq"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/color_1b1b1b"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/share_weixin"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_10dp"
            android:drawableTop="@mipmap/share_weixin"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/color_1b1b1b"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/share_weibo"
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:drawablePadding="@dimen/margin_10dp"
            android:drawableTop="@mipmap/share_weibo"
            android:gravity="center"
            android:text="微博"
            android:textColor="@color/color_1b1b1b"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@mipmap/share_bg" />
</RelativeLayout>