<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_bank_card_list"
    android:layout_width="match_parent"
    android:visibility="gone"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:layout_margin="@dimen/x15"
        android:background="@mipmap/bankcard_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x110"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_bank_card_name"
                style="@style/user_bank_card_name" />

            <TextView
                android:id="@+id/txt_bank_name"
                style="@style/user_bank_card" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x25"
            android:orientation="horizontal">

            <TextView style="@style/user_bank_card_name"
                android:text="卡号"
                />

            <TextView
                android:id="@+id/txt_bank_card_num"
                style="@style/user_bank_card" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_bank_card_edit"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/x50"
                android:background="@mipmap/bankcard_edit"
                android:gravity="center"
                android:text="@string/edit"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/x0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_bank_card_delete"
                android:layout_width="@dimen/x150"
                android:layout_height="@dimen/x50"
                android:background="@drawable/img_user_bank_card_delete"
                android:gravity="center"
                android:text="@string/delete"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>