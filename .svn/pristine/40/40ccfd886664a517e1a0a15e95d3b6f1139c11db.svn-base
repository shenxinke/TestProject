<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_solid_white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical">

        <com.yst.onecity.view.roundedimageview.RoundedImageView
            android:id="@+id/iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitXY"
            android:background="@mipmap/head_2"
            app:oval="true" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:ellipsize="end"
            android:maxLength="10"
            android:singleLine="true"
            android:text="哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
            android:textColor="@color/color_333333"
            android:textSize="17sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:gravity="left"
        android:maxLength="100"
        android:hint="说说你的使用心得，分享给大家吧"
        android:textColorHint="@color/color_bbbbbb"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="综合评分"
            android:textColor="@color/color_333333"
            android:textSize="17sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/foodRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:numStars="5"
            android:stepSize="1"
            android:rating="5"
            android:progressTint="@color/color_FFCE1C"/>
    </LinearLayout>
</LinearLayout>