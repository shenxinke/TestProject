<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.yst.onecity.view.roundedimageview.RoundedImageView
        android:id="@+id/item_iv_share_head"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:oval="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/head_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/item_txt_share_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="名称"
        android:textColor="@color/color_1b1b1b"
        app:layout_constraintLeft_toRightOf="@id/item_iv_share_head"
        app:layout_constraintTop_toTopOf="@id/item_iv_share_head"
        android:layout_marginStart="@dimen/margin_10dp"/>

    <TextView
        android:id="@+id/item_txt_share_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="内容"
        android:textColor="@color/color_1b1b1b"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_iv_share_head"
        android:layout_marginStart="@dimen/margin_10dp"/>

    <com.yst.onecity.view.roundedimageview.RoundedImageView
        android:id="@+id/item_iv_share_cover"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/top_backgroud"
        app:oval="false"
        app:corner_radius="3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_txt_share_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/item_zhuanfa"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="0"
        android:textSize="11sp"
        android:textColor="@color/app_default_color"
        android:drawableLeft="@mipmap/fenxiang"
        android:drawablePadding="4dp"
        android:paddingRight="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/item_iv_share_cover"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/item_pinglun"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <View
        android:layout_width="@dimen/layout_height_0.5dp"
        android:layout_height="20dp"
        android:background="@color/app_default_color"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintTop_toBottomOf="@id/item_iv_share_cover"
        app:layout_constraintLeft_toRightOf="@id/item_zhuanfa"
        app:layout_constraintRight_toLeftOf="@+id/item_pinglun"
        app:layout_constraintBottom_toBottomOf="@+id/item_pinglun"
        />

    <TextView
        android:id="@+id/item_pinglun"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="0"
        android:textSize="11sp"
        android:textColor="@color/app_default_color"
        android:drawableLeft="@mipmap/pinglun"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_iv_share_cover"
        app:layout_constraintLeft_toRightOf="@id/item_zhuanfa"
        app:layout_constraintRight_toLeftOf="@+id/item_dianzan"
        />

    <View
        android:layout_width="@dimen/layout_height_0.5dp"
        android:layout_height="20dp"
        android:background="@color/app_default_color"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        app:layout_constraintTop_toBottomOf="@id/item_iv_share_cover"
        app:layout_constraintLeft_toRightOf="@id/item_pinglun"
        app:layout_constraintRight_toLeftOf="@+id/item_dianzan"
        app:layout_constraintBottom_toBottomOf="@+id/item_dianzan"
        />

    <TextView
        android:id="@+id/item_dianzan"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="0"
        android:textSize="11sp"
        android:textColor="@color/app_default_color"
        android:drawableLeft="@mipmap/zan"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/item_iv_share_cover"
        app:layout_constraintLeft_toRightOf="@id/item_pinglun"
        app:layout_constraintRight_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>