<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/main_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_top1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/pic_selected"
                />
            <TextView
                android:id="@+id/txt_top1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加封面与标题"
                android:textColor="@color/color_FCAD23"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/iv_top2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/content_normal"
                />
            <TextView
                android:id="@+id/txt_top2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写正文"
                android:textColor="@color/color_989CA8"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/iv_line_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/line_selected"
            android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/iv_line_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/line_normal"
            android:scaleType="fitXY"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="标题封面正文商品都必填才能发布"
        android:textSize="12sp"
        android:textColor="@color/color_989CA8"
        android:gravity="center_vertical"
        android:background="@color/color_f4f4f4"
        android:paddingLeft="13dp"
        />
    <LinearLayout
        android:id="@+id/ll_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="13dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题"
                android:textSize="16sp"
                android:textColor="@color/color_989CA8"
                android:layout_gravity="center_vertical"
                />
            <com.yst.tianyimember.view.ContainsEmojiEditText
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:textColorHint="@color/color_999999"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:minHeight="50dp"
                android:hint="最多输入20字"
                android:maxLength="20"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textCursorDrawable="@drawable/shape_et_cursor"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_dddddd"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="封面"
                android:textSize="16sp"
                android:layout_marginLeft="13dp"
                android:textColor="@color/color_989CA8"
                android:layout_gravity="center_vertical"
                />

            <RadioGroup
                android:id="@+id/rg_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/rb_one"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="一图"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/selector_publish_rb"
                    android:drawablePadding="8dp"
                    android:textSize="15sp"
                    />
                <RadioButton
                    android:id="@+id/rb_three"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="三图"
                    android:button="@null"
                    android:drawableLeft="@drawable/selector_publish_rb"
                    android:drawablePadding="8dp"
                    android:textSize="15sp"
                    />
            </RadioGroup>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:id="@+id/rel_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                >
                <com.yst.tianyimember.view.roundedimageview.RoundedImageView
                    android:id="@+id/iv_background"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:src="@mipmap/changfang"
                    android:scaleType="fitXY"
                    app:oval="false"
                    app:corner_radius="4dp"
                    />
                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/add_gray"
                    android:layout_centerInParent="true"
                    />
                <RelativeLayout
                    android:id="@+id/rel_cover_close"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/delete_publish"
                        />
                </RelativeLayout>
            </RelativeLayout>

            <GridView
                android:id="@+id/gridView_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:horizontalSpacing="10dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/txt_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="下一步"
                android:background="@drawable/shape_next"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rel_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f4f4f4"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/txt_back"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="上一步"
            android:background="@drawable/shape_next"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/txt_back"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <com.yst.tianyimember.view.editor.CommoditySortRichEditor
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:imeOptions="actionNext"
                    android:minHeight="200dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    app:sreHint="输入正文（不要超过2000字）"
                    app:sreHintColor="@color/color_92969C"
                    app:sreTextSize="15"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_dddddd"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    >
                    <ImageView
                        android:id="@+id/iv_add_pic"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/add_pic"
                        android:layout_marginLeft="13dp"
                        android:layout_centerVertical="true"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        >
                        <TextView
                            android:id="@+id/txt_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/color_989CA8"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" / 2000"
                            android:textColor="@color/color_989CA8"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="添加商品"
                    android:textSize="13sp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/color_989CA8"
                    android:background="@color/color_f4f4f4"
                    android:paddingLeft="13dp"
                    />
                <LinearLayout
                    android:id="@+id/ll_addProduct"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txt_addProduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加商品"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_add_product"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="13dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        />
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    />
                <RelativeLayout
                    android:id="@+id/rel_continue"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/txt_continue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="继续添加商品"
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_add_product"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp"
                        />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>
