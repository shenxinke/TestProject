<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <include layout="@layout/main_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:id="@+id/ll_city"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@mipmap/position_black"
                />
            <TextView
                android:id="@+id/txt_city"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="北京"
                android:textSize="13sp"
                android:maxLines="1"
                android:maxLength="4"
                android:ellipsize="end"
                android:textColor="@color/color_333333"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:src="@mipmap/xia"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/shape_edit_gray_3"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/search"
                    android:layout_marginLeft="10dp"
                    />
                <com.yst.onecity.view.ContainsEmojiEditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:hint="请输入地址"
                    android:textColorHint="@color/color_999999"
                    android:textSize="13sp"
                    android:layout_marginLeft="8dp"
                    android:background="@null"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/shape_et_cursor"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:textSize="15sp"
                android:textColor="@color/color_333333"
                android:layout_marginLeft="14dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/color_FBFAFA"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dddddd"
        />
    <RelativeLayout
        android:id="@+id/rel_position"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <TextView
            android:id="@+id/txt_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重新定位"
            android:textColor="@color/color_FFD000"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            />
        <ImageView
            android:id="@+id/iv_again"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/dangqian"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@+id/txt_again"
            />
        <TextView
            android:id="@+id/txt_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="定位地址"
            android:textColor="@color/color_333333"
            android:layout_toLeftOf="@id/iv_again"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_dddddd"
        />

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="历史输入"
            android:textColor="@color/color_666666"
            />
        <LinearLayout
            android:id="@+id/ll_history_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</LinearLayout>
