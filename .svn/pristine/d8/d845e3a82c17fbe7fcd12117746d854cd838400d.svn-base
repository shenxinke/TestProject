<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:id="@+id/llayout_empty_content"
    android:visibility="gone"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/x96"
        android:id="@+id/img_empty_content"
        android:layout_marginTop="@dimen/x50"
        android:src="@mipmap/img_myattention_none"
        android:layout_height="@dimen/x96" />

    <TextView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/x20"
        android:id="@+id/txt_empty_content"
        android:text="@string/str_empty_content"
        android:gravity="center"
        android:textSize="@dimen/text_size_14"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_empty_handle"
        android:layout_width="@dimen/x148"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/img_empty_handle_bg"
        android:textSize="@dimen/text_size_14"
        android:text="@string/str_empty_handle_content"
        android:layout_height="@dimen/x45" />

</LinearLayout>