<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_addVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/x12"
        android:drawablePadding="@dimen/x4"
        android:drawableTop="@drawable/px_video_add"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_share"
        android:layout_marginEnd="@dimen/x10" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:gravity="center_horizontal"
        android:drawablePadding="@dimen/x4"
        android:drawableTop="@drawable/px_fx"
        android:text="123"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        android:layout_marginEnd="@dimen/x10" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x12"
        android:drawablePadding="@dimen/x4"
        android:drawableTop="@drawable/px_pl"
        android:text="123"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_share"
        android:layout_marginEnd="@dimen/x10" />
    <TextView
        android:id="@+id/tv_dz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x12"
        android:drawablePadding="@dimen/x4"
        android:drawableTop="@drawable/px_dz"
        android:text="123"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment"
        android:layout_marginEnd="@dimen/x10" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="昵称昵称"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        android:layout_marginBottom="@dimen/x48"
        android:layout_marginLeft="@dimen/x12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
       />

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/x44"
        android:layout_height="@dimen/x44"
        android:background="@mipmap/head_2"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginBottom="@dimen/x8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_nickname"
        />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="商品名称"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15"
        android:layout_marginBottom="@dimen/x48"
        android:layout_marginLeft="@dimen/x32"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        app:layout_constraintTop_toTopOf="@+id/iv_head"
        />


    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_12"
        android:background="@drawable/px_desc_bg"
        android:paddingLeft ="@dimen/x24"
        android:paddingRight="@dimen/x4"
        android:paddingTop="@dimen/x6"
        android:paddingBottom="@dimen/x6"
        android:maxLength="30"
        android:text="这是分享视频的内容你看看哦两行,你看这样行吗?"
        app:layout_constraintLeft_toLeftOf="@+id/tv_product_name"
        app:layout_constraintRight_toLeftOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

</android.support.constraint.ConstraintLayout>