<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yst.onecity.view.roundedimageview.RoundedImageView
            android:layout_width="@dimen/layout_height_90dp"
            android:layout_height="@dimen/layout_height_90dp"
            android:src="@mipmap/head_2"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            app:oval="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:textSize="16dp"
                android:text="name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4"
                android:layout_marginTop="@dimen/margin_10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/shape_label_gray_bg"
                    android:padding="@dimen/padding_3dp"
                    android:text="标签1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:background="@drawable/shape_label_gray_bg"
                    android:padding="@dimen/padding_3dp"
                    android:text="标签1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:background="@drawable/shape_label_gray_bg"
                    android:padding="@dimen/padding_3dp"
                    android:text="标签1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <GridView
        android:id="@+id/gv_product"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginLeft="110dp"
        android:numColumns="3"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginBottom="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:layout_marginLeft="110dp">


        <ImageView
            android:layout_height="@dimen/layout_height_80dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@mipmap/head_2"/>
        <ImageView
            android:layout_height="@dimen/layout_height_80dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@mipmap/head_2"/>
        <ImageView
            android:layout_height="@dimen/layout_height_80dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:src="@mipmap/head_2"/>

    </LinearLayout>
</LinearLayout>