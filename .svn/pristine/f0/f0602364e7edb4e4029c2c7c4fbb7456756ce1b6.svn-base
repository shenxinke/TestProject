<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/main_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45dp"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:id="@+id/tv_register_phone"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="新密码:"
                android:textColor="@color/color_2b2b2b"
                android:textSize="@dimen/textSize_14dp" />

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toRightOf="@+id/tv_register_phone"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:digits="0123456789"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="6"
                android:textColor="@color/color_8c8c8c"
                android:textSize="@dimen/textSize_14dp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@color/color_e8e7e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45dp"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:id="@+id/tv_password_phone"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="确认密码:"
                android:textColor="@color/color_2b2b2b"
                android:textSize="@dimen/textSize_14dp" />

            <EditText
                android:id="@+id/et_password_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_password_phone"
                android:background="@null"
                android:digits="0123456789"
                android:hint="重复输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:gravity="left|center_vertical"
                android:maxLength="6"
                android:textColor="@color/color_8c8c8c"
                android:textSize="@dimen/textSize_14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:background="@color/color_e8e7e5" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_45dp"
            android:layout_marginLeft="@dimen/margin_25dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_10dp">

            <TextView
                android:id="@+id/tv_code_phone"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:text="手机验证码:"
                android:textColor="@color/color_2b2b2b"
                android:textSize="@dimen/textSize_14dp" />

            <EditText
                android:id="@+id/et_code_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_toLeftOf="@+id/btn_code_phone"
                android:layout_toRightOf="@+id/tv_code_phone"
                android:background="@null"
                android:hint="请输入验证码"
                android:gravity="left|center_vertical"
                android:inputType="number"
                android:textColor="@color/color_8c8c8c"
                android:textSize="@dimen/textSize_14dp" />

            <TextView
                android:id="@+id/btn_code_phone"
                android:layout_width="@dimen/layout_width_90dp"
                android:layout_height="@dimen/layout_height_29dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_gray_180dp_bg"
                android:gravity="center"
                android:text="@string/get_verification"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_11dp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_modify_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_40dp"
        android:layout_marginLeft="@dimen/margin_30dp"
        android:layout_marginRight="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_80dp"
        android:background="@mipmap/login_img_loginbg"
        android:gravity="center"
        android:text="确定修改"
        android:textColor="@color/black"
        android:textSize="17sp" />

</LinearLayout>