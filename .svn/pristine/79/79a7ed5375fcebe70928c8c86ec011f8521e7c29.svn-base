<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/custom_addorder"
    android:background="@mipmap/address_bg"
    >

    <RelativeLayout
        android:id="@+id/adress_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/address_no_tv"
        android:layout_toEndOf="@+id/address_no_tv">
        <ImageView
            android:id="@+id/img_address"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/position"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_address"
            android:layout_toLeftOf="@+id/img_right_icon"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货人: "
                    android:textColor="@color/color_262626"
                    />
                <TextView
                    android:id="@+id/address_name_tv"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/color_262626"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:ellipsize="end"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/address_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="***********"
                android:textColor="@color/color_262626"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址: "
                android:layout_below="@id/address_phone"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_262626"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/colorTransparent"
                android:layout_below="@id/address_tv"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_right_icon"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@mipmap/right_black"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address_no_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/position"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="新增地址"
            />
    </RelativeLayout>

</RelativeLayout>