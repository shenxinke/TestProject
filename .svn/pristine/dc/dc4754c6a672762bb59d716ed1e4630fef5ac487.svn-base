<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F7F7F7"
    android:paddingLeft="@dimen/x14"
    android:paddingRight="@dimen/x14"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/x48"
        android:layout_height="@dimen/x48"
        android:background="@mipmap/head_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginTop="@dimen/x4"
        android:text="易商通"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        app:layout_constraintRight_toLeftOf="@id/iv_dz"
        app:layout_constraintTop_toTopOf="@id/iv_head" />


    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginBottom="@dimen/x4"
        android:singleLine="true"
        android:text="11月11日"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_13"
        app:layout_constraintLeft_toRightOf="@id/iv_head"
        app:layout_constraintBottom_toBottomOf="@id/iv_head" />


    <ImageView
        android:id="@+id/iv_commentdz"
        android:layout_width="@dimen/x28"
        android:layout_height="@dimen/x28"
        android:padding="@dimen/x4"
        android:layout_marginRight="@dimen/x6"
        android:src="@drawable/item_zan_unpress"
        app:layout_constraintRight_toLeftOf="@+id/tv_itemdz"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        />

    <TextView
        android:id="@+id/tv_itemdz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10086"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_13"
        android:layout_marginTop="@dimen/x4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_commentdz"
        app:layout_constraintBottom_toBottomOf="@+id/iv_commentdz"
        />

    <TextView
        android:id="@+id/tv_item_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/msg_camera_framework_bug"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/text_size_14"
        android:layout_marginTop="@dimen/x10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_head"
        />

    <View
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/color_445c5c5c"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginBottom="@dimen/x10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>