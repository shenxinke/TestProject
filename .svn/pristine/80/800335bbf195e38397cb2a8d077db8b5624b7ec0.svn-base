<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#cccccc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_item_on_line_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/item_item_on_line_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="水粉笔"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_item_on_line_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:text="￥ 50"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_item_on_line_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_item_on_line_price"
                android:layout_marginTop="10dp"
                android:text="x2"
                android:textColor="#aaaaaa" />

            <TextView
                android:id="@+id/item_item_on_line_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_item_on_line_num"
                android:layout_marginTop="10dp"
                android:text="黑色（35根）"
                android:textColor="#aaaaaa" />

            <TextView
                android:id="@+id/item_item_on_line_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_item_on_line_num"
                android:layout_marginTop="10dp"
                android:text="获得奖励 100"
                android:textColor="#aaaaaa" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>